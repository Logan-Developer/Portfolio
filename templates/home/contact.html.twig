<section id="contact">
    <div class="contact-content">
        <h2>Contact</h2>
        <p>{% trans %}contact_section.description{% endtrans %}</p>
        <br>
        <div class="card">
            <div class="card-body contact-grid">
                <div class="contact-phone-icon">
                    <a class="icon-box" href="tel:+33768523276"><img alt="{% trans %}contact_section.phone.image_description{% endtrans %}"
                                                                     src="{{ asset('img/icons/phone.svg') }}"/></a>
                </div>
                <div class="contact-email-icon">
                    <a class="icon-box" href="mailto:logan2.humbert@gmail.com"><img alt="{% trans %}contact_section.mail_address.image_description{% endtrans %}"
                                                                                    src="{{ asset('img/icons/email.svg') }}"/></a>
                </div>

                <div class="contact-phone-text">
                    <p><span class="font-weight-bold">{% trans %}contact_section.phone.title{% endtrans %}</span></p>
                </div>
                <div class="contact-email-text">
                    <p><span class="font-weight-bold">{% trans %}contact_section.mail_address.title{% endtrans %}</span></p>
                </div>


                <div class="contact-github-icon">
                    <a class="icon-box" href="https://github.com/Logan-Developer"><img alt="{% trans %}contact_section.github.image_description{% endtrans %}"
                                                                                       src="{{ asset('img/icons/github.svg') }}"/></a>
                </div>
                <div class="contact-linkedin-icon">
                    <a class="icon-box" href="https://www.linkedin.com/in/logan-humbert-982a68196/"><img alt="{% trans %}contact_section.linkedin.image_description{% endtrans %}"
                                                                                                         src="{{ asset('img/icons/linkedin.svg') }}"/></a>
                </div>

                <div class="contact-github-text">
                    <p><span class="font-weight-bold">{% trans %}contact_section.github.title{% endtrans %}</span></p>
                </div>
                <div class="contact-linkedin-text">
                    <p><span class="font-weight-bold">{% trans %}contact_section.linkedin.title{% endtrans %}</span></p>
                </div>
            </div>
        </div>
    </div>
    <br>
</section>